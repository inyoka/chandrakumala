<% include ../partials/header %>

<section class="flex-new-camp">
  <form class="btn-toolbar" action="/pages" method="post">
    <h1 class="text-center w-100">Create new page</h1>
    <input class="form-control my-2 mt-4" type="text" name='name' placeholder="name">
    <input class="form-control my-2" type="text" name='image' placeholder="image url">
    <textarea class="form-control my-2" type="textarea" name="description" placeholder="Description ..." rows="3"></textarea>
    <input class="form-control my-2 mb-4" type="number" name='price' placeholder="price" min="0.00" step="0.10">
    <button class="btn btn-lg btn-primary btn-block my-2">Submit</button>
    <a href="/pages">Go Back</a>
  </form>
</section>

